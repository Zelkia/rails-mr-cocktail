<div class='header-container'><h1>Mr Cocktail.</h1><%= cl_image_tag("tophat_f3l0ki.png", :width=>96, :crop=>"scale") %>
<p>Impress the Mrs...</p></div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-md-4 col-lg-3">
        <div class="card-container">
          <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.5)), url('<%= cl_image_path (cocktail.photo? ? cocktail.photo : "ls2ynaezrxnkntugszzo.jpg"), :effect=>"art:red_rock", :gravity=>"center", :height=>300, :width=>300, :x=>0, :y=>0, :crop=>"limit"  %>')">
            <div class=card-body-inner><%= cocktail.name %>
              <br />
              <% cocktail.rating.times do %>
                <i class='fa fa-star gold'></i>
              <% end %>
              <br />
              <% cocktail.complexity.times do %>
                <i class="fa fa-cog" aria-hidden="true"></i>
              <% end %>
            </div>
            <div class="card-footer"><%= cocktail.description %></div>
            <div class="overlay"><%= link_to "", cocktail_path(cocktail), class: 'card-body-link' %></div>
          </div>

        </div>
      </div>
    <% end %>

    <div class="col-xs-12 col-md-4 col-lg-3">
      <div class="card-container">
        <div class="card-body"><%= link_to 'new', new_cocktail_path, class: 'btn btn-primary card-button' %>
        </div>
      </div>
    </div>
  </div>
</div>


